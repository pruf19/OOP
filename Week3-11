import java.util.*;
public class week3_11 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int i;
        System.out.println("Please insert a number : ");
        int x = sc.nextInt();
        for (i = 1; i <= x; i++)
            if (i % 5 == 0) {
                System.out.print("/");
            }
            else
                System.out.print("|");
    }
}
